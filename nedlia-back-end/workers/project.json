{
  "name": "workers",
  "projectType": "application",
  "sourceRoot": "nedlia-back-end/workers/src",
  "tags": ["scope:backend", "type:app", "lang:python"],
  "targets": {
    "install": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uv sync",
        "cwd": "nedlia-back-end/workers"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uv run ruff check src/",
        "cwd": "nedlia-back-end/workers"
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uv run ruff format src/",
        "cwd": "nedlia-back-end/workers"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uv run pytest",
        "cwd": "nedlia-back-end/workers"
      },
      "dependsOn": ["install"]
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uv run mypy src/",
        "cwd": "nedlia-back-end/workers"
      }
    }
  }
}
